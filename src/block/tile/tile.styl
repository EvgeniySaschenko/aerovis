.about
	.tile
		font-size 0
		text-align center
		&__item
			width 33.33%
			min-width 350px
			display inline-block
			font-size 18px
			vertical-align top
			margin-bottom 20px
		&__logo 
			line-height 140px
		&__img
			max-width 250px
			vertical-align middle
			line-height 190px
		&__name
			padding-top 20px
			color #6999b5

@media phone
	.about
		.tile
			&__item
				min-width 250px
				width 100%
			&__logo 
				line-height 90px